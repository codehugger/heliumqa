<p id="notice"><%= notice %></p>

<h1>Mime Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mime_types.each do |mime_type| %>
      <tr>
        <td><%= mime_type.name %></td>
        <td><%= mime_type.description %></td>
        <td><%= link_to 'Show', mime_type %></td>
        <td><%= link_to 'Edit', edit_mime_type_path(mime_type) %></td>
        <td><%= link_to 'Destroy', mime_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

