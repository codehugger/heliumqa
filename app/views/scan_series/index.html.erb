<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-12">
    <h2>Scan Series</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>Scan Series</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Scan Series</h5>
        </div>
        <div class="ibox-content">
          <% if @scan_series.count > 0 %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Description</th>
                    <th>UID</th>
                    <th>Number</th>
                    <th>File Count</th>
                    <th>Actions</th>
                  </tr>
                </thead>

                <tbody>
                  <% @scan_series.each do |scan_series| %>
                  <tr>
                    <td><%= link_to scan_series, scan_series %></td>
                    <td><%= scan_series.uid %></td>
                    <td><%= scan_series.number %></td>
                    <td><%= scan_series.inspection_files.count %></td>
                    <td class="project-actions">
                      <%= link_to edit_scan_series_path(scan_series), class: 'btn btn-white btn-xs' do %>
                      <i class="fa fa-pencil"></i>
                      <% end %>
                      <%= link_to scan_series, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
                      <i class="fa fa-times"></i>
                      <% end %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p>No scan series found.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
