<table class="table table-hover">
  <thead>
    <td>Preview</td>
    <td>Series</td>
    <td>Scan Protocol</td>
    <td>File count</td>
    <td>Actions</td>
  </thead>
  <tbody>
    <% scan_series.each do |series| %>
      <tr>
        <td><%= image_tag series.preview.file_url(:tiny) %></td>
        <td><%= link_to series.description, series %></td>
        <td><%= link_to series.scan_protocol, series.scan_protocol %></td>
        <td><%= series.files.count %></td>
        <td>
          <div class="dropdown pull-left">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <i class="fa fa-cog"></i>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
              <li><%= link_to 'Create Protocol', new_scan_protocol_path(qa_session_file_id: series.files.first.id) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Delete', series, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
