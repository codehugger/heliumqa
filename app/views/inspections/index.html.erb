<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-12">
    <h2>Inspections</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>Inspections</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <% if Inspection.count > 0 %>
      <div class="ibox">
        <div class="ibox-title">
          <h5>Inspections</h5>
          <div class="ibox-tools">
            <%= link_to 'Create inspection', new_inspection_path, class: 'btn btn-primary btn-xs' %>
          </div>
        </div>
        <div class="ibox-content">
          <%= render 'inspections/inspections', inspections: @inspections %>
        </div>
      </div>
      <% else %>
      <div class="ibox">
        <div class="ibox-title">
          <h5>Inspections</h5>
        </div>
        <div class="ibox-content">
          <p>You have no inspections.</p>
          <%= link_to 'Create inspection', new_inspection_path %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
