<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-6">
    <h2>Equipment</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>Equipment</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-6">
    <div class="title-action">
      <%= link_to new_equipment_path, class: 'btn btn-primary' do %>
        <i class="fa fa-plus"></i> Equipment
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Equipment</h5>
        </div>
        <div class="ibox-content">
          <%= render 'equipment/equipment_index', equipment: @equipment %>
        </div>
      </div>
    </div>
  </div>
</div>
