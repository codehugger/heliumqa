<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Equipment</h2>
    <ol class="breadcrumb">
      <li>Manage</li>
      <li class="active">
        <strong>Equipment</strong>
      </li>
    </ol>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <% if Site.count > 0 %>
      <div class="ibox">
        <div class="ibox-title">
          <h5>Equipment</h5>
          <div class="ibox-tools">
            <%= link_to 'Create equipment', new_equipment_path, class: 'btn btn-primary btn-xs' %>
          </div>
        </div>
        <div class="ibox-content">
          <%= render 'equipment/equipment_index', equipment: @equipment %>
        </div>
      </div>
      <% else %>
      <div class="ibox">
        <div class="ibox-title">
          <h5>Equipment</h5>
        </div>
        <div class="ibox-content">
          <p>You have no sites.</p>
          <p>You'll have to create one before continuing</p>
          <%= link_to 'Create site', new_site_path %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
