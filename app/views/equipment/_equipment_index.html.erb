<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% equipment.each do |equipment| %>
      <tr>
        <td><%= link_to equipment, equipment %></td>
        <td class="project-actions">
          <%= link_to edit_equipment_path(equipment), class: 'btn btn-white btn-xs' do %>
          <i class="fa fa-pencil"></i>
          <% end %>
          <%= link_to equipment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
          <i class="fa fa-times"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
