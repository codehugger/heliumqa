<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-6">
    <h2>Sites</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>Sites</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-6">
    <div class="title-action">
      <%= link_to new_site_path, class: 'btn btn-primary' do  %>
        <i class="fa fa-plus"></i> Site
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper wrapper-content">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h5>Sites</h5>
        </div>
        <div class="ibox-content">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Equipment</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @sites.each do |site| %>
                <tr>
                  <td><%= link_to site, site %></td>
                  <td class="site-equipment"><%= site.equipment.count %></td>
                  <td class="project-actions">
                    <%= link_to edit_site_path(site), class: 'btn btn-white btn-xs' do %>
                    <i class="fa fa-pencil"></i>
                    <% end %>
                    <%= link_to site, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
                    <i class="fa fa-times"></i>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
