<%= form_with(model: [@scan_protocol, scan_protocol_matcher], local: true, html: { class: 'form-horizontal' }) do |form| %>
  <% if scan_protocol_matcher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(scan_protocol_matcher.errors.count, "error") %> prohibited this scan_protocol_matcher from being saved:</h2>

      <ul>
        <% scan_protocol_matcher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :scan_header_tag_id, class: 'col-sm-2 control-label' do %>Tag<% end %>
    <div class="col-sm-10">
      <%= form.collection_select :scan_header_tag_id, ScanHeaderTag.order(label: :asc), :id, :label, {}, class: 'form-control', id: :scan_header_tag_id %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :value_type_matcher_id, class: 'col-sm-2 control-label' do %>Operator<% end %>
    <div class="col-sm-10">
      <%= form.grouped_collection_select :value_type_matcher_id, ScanHeaderTag.order(label: :asc), :value_type_matchers, :label, :id, :label, { include_blank: false }, class: 'form-control', id: :value_type_matcher_id %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :value, class: 'col-sm-2 control-label' do %>Value<% end %>
    <div class="col-sm-10">
      <%= form.text_field :value, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :matcher, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :matcher, class: 'form-control', readonly: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2 form-buttons">
      <%= link_to "Cancel", :back, class: 'btn btn-white' %>
      <%= form.submit 'Update', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
