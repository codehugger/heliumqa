<%= form_with(model: equipment_profile, local: true, html: { class: 'form-horizontal' }) do |form| %>

<% if equipment_profile.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(equipment_profile.errors.count, "error") %> prohibited this equipment_profile from being saved:</h2>

  <ul>
    <% equipment_profile.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= form.label :site_id, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= form.collection_select :site_id, current_account.sites.all, :id, :name, { prompt: "Select site" }, { class: 'form-control' } %>
  </div>
</div>

<div class="form-group">
  <%= form.label :name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= form.text_field :name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :profile, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10 col-sm-offset-2">
      <!-- <div class="row">
        <div class="col-sm-12">
          <%= form.text_area :profile, id: :equipment_profile_profile, class: "form-control" %>
        </div>
      </div> -->
      <%= fields_for :profile_data do |profile_data_fields| %>
      <table class="table">
        <colgroup>
          <col width=200 />
          <col />
          <col width=50/>
        </colgroup>
        <thead>
          <th>Key</th>
          <th>Value</th>
        </thead>
        <tbody>
          <% equipment_profile.profile_data.each do |key, value| %>
          <tr>
            <td><%= profile_data_fields.text_field key, value: key, class: 'form-control' %></td>
            <td><%= profile_data_fields.text_field key, value: value, class: 'form-control' %></td>
            <td><a href="" class="btn btn-sm btn-danger" onclick="removeOnClick(this); return false;"><i class="fa fa-trash"></i></a></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 col-sm-offset-2">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
